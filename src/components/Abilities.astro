---
import Blender from "../assets/svg/blender.svg";
import ThreeDSMax from "../assets/svg/3ds-max.svg";
import Unity from "../assets/svg/unity.svg";
import UnrealEngine from "../assets/svg/unreal-engine.svg";
import Substance3DPainter from "../assets/svg/substance-3d-painter.svg";
import Krita from "../assets/svg/krita.svg";
import PureRef from "../assets/svg/pureref.svg";

const LOGO_SIZE = 64;
---

<div>
    <h2 class="text-2xl font-bold mb-2 text-center text-text-secondary">
        My Abilities
    </h2>
    
    <div class="flex flex-row flex-wrap gap-8 items-center justify-items-center justify-center">
        <div class="">
            <Blender width={LOGO_SIZE} height={LOGO_SIZE} role="img" aria-label="Blender" />
        </div>
        <div class="">
            <ThreeDSMax width={LOGO_SIZE} height={LOGO_SIZE} role="img" aria-label="3DS Max" />
        </div>
        <div class="">
            <Unity width={LOGO_SIZE} height={LOGO_SIZE} role="img" aria-label="Unity" />
        </div>
        <div class="">
            <UnrealEngine width={LOGO_SIZE} height={LOGO_SIZE} role="img" aria-label="Unreal Engine" />
        </div>
        <div class="">
            <Substance3DPainter width={LOGO_SIZE} height={LOGO_SIZE} role="img" aria-label="Substance 3D Painter" />
        </div>
        <div class="">
            <Krita width={LOGO_SIZE} height={LOGO_SIZE} role="img" aria-label="Krita" />
        </div>
        <div class="">
            <PureRef width={LOGO_SIZE} height={LOGO_SIZE} role="img" aria-label="PureRef" />
        </div>
    </div>
</div>
